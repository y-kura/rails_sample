
<p id="notice"><%= notice %></p>

<% if session[:user_id] %>
<center>
<%= link_to '　新しい画像の投稿　', '/test/add', class: 'btn btn-outline-secondary' %><br>
</center>
<br>
<% end %>



<ul class = "tile">
<% @blogs.each do |blog| %>
  <li>
    <a href="<%= url_for '/test/show/' + blog[:id].to_s %>">
    <img src="<%= url_for '/test/image/' + blog[:id].to_s %>" width="140px">
    </a>
    <p><%= blog.title %></p>
  </li>
<% end %>
</ul>



